{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Gateway": {
    "MasterKey": "REPLACE_WITH_ENV_VARIABLE",
    "DatabasePath": "/data/apikeys.sqlite",
    "LogPath": "/logs/log-.txt",
    "LogRetentionDays": 31,
    "EnableHttpsRedirection": false,
    "ForceHttp11ForOllama": false
  },
  "Proxy": {
    "StripSensitiveHeaders": true,
    "AllowedRequestHeaders": [
      "Accept",
      "Content-Type",
      "User-Agent",
      "Accept-Encoding",
      "Accept-Language"
    ]
  },
  "Upstreams": {
    "SpeachesBaseUrl": "http://10.64.10.4:8000",
    "OllamaBaseUrl": "http://10.64.10.5:11434",
    "OllamaAuthorization": ""
  },
  "Ollama": {
    "DefaultModel": "gemma3:12b",
    "RequestTimeoutSeconds": 120
  },
  "AllowedHosts": "*"
}
